{{ define "roles_content" }}

<!-- Header -->
<div class="bg-white rounded-2xl shadow p-6 md:p-8 mb-6">
  <div class="flex items-center justify-between">
    <div>
      <h2 class="text-2xl font-semibold mb-1">Assign Roles</h2>
      <p class="text-slate-600 text-sm">View all ssigning roles in user</p>
    </div>
    <div class="flex items-center gap-2">
    
      <a href="/dashboard"
          class="px-3 py-1.5 text-sm bg-slate-100 hover:bg-slate-200 text-slate-700 rounded-lg transition shadow-sm">
          ‚Üê Back to Dashboard
        </a>
    </div>
  </div>
</div>

    <div class="bg-slate-50 rounded-2xl border border-slate-100 overflow-hidden">
      <table class="min-w-full text-sm">
        <thead class="bg-slate-100 text-slate-600">
          <tr>
            <th class="px-5 py-3 text-left text-xs font-semibold">#</th>
            <th class="px-5 py-3 text-left text-xs font-semibold">Name</th>
            <th class="px-5 py-3 text-left text-xs font-semibold">Email</th>
            <th class="px-5 py-3 text-left text-xs font-semibold">Assigned Roles</th>
            <th class="px-5 py-3 text-right text-xs font-semibold">Action</th>
          </tr>
        </thead>
        <tbody id="roles-table-body" class="bg-white divide-y divide-slate-100">
          <!-- Filled by app.js via /api/v1/... -->
        </tbody>
      </table>

      <div id="roles-empty-state" class="py-10 text-center text-sm text-slate-400 hidden">
        No role assignments found.
      </div>
    </div>

    <!-- Manage Roles Modal -->
    <div id="manageRolesModal" class="hidden fixed inset-0 bg-black/40 flex items-center justify-center z-50">
      <div class="bg-white rounded-2xl shadow-xl w-full max-w-lg p-6">
        <h3 class="text-lg font-semibold mb-3">Manage Roles</h3>
        <div id="manageRolesUserInfo" class="text-sm text-slate-600 mb-4"></div>
        <div id="manageRolesList" class="grid grid-cols-1 gap-2 max-h-56 overflow-auto mb-4">
          <!-- checkboxes populated by JS -->
        </div>
        <div class="flex justify-end gap-3">
          <button id="cancelManageRoles" class="px-3 py-2 rounded-lg bg-slate-200 text-slate-700 text-sm hover:bg-slate-300">Cancel</button>
          <button id="saveManageRoles" class="px-3 py-2 rounded-lg bg-blue-600 text-white text-sm hover:bg-blue-700">Save</button>
        </div>
      </div>
    </div>

{{ end }}
{{ template "layout" . }}