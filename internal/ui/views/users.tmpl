{{ define "users_content" }}

<!-- Header -->
<div class="bg-white rounded-2xl shadow p-6 md:p-8 mb-6">
  <div class="flex items-center justify-between">
    <div>
      <h2 class="text-2xl font-semibold mb-1">Users</h2>
      <p class="text-slate-600 text-sm">Manage all registered users</p>
    </div>
    <div class="flex items-center gap-2">
      <button id="refreshUsers" class="flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium px-4 py-2 rounded-lg transition">
        <span>↻</span> Refresh
      </button>
      <button id="showAddUser"
          class="px-3 py-2 text-sm bg-green-600 hover:bg-green-700 text-white rounded-lg shadow transition">
          ➕ Add User
        </button>
      <a href="/dashboard"
          class="px-3 py-1.5 text-sm bg-slate-100 hover:bg-slate-200 text-slate-700 rounded-lg transition shadow-sm">
          ← Back to Dashboard
        </a>
    </div>
  </div>
</div>

<!-- Add User Modal -->
  <div id="addUserModal"
    class="hidden fixed inset-0 bg-black/30 flex items-center justify-center z-50">
    <div class="bg-white rounded-2xl shadow-xl w-full max-w-md p-6">
      <h2 class="text-lg font-semibold text-slate-800 mb-4">Add New User</h2>
      <form id="addUserForm" class="space-y-4">
      
        <div>
          <label class="block text-sm mb-1 text-slate-700">Organization</label>
          <select name="org_id" id="org_id"
            class="w-full border border-slate-300 rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-blue-500 outline-none bg-white">
            <option value="1">Organic</option>
            <option value="3">Non-Organic</option>
            <option value="4">Vendor</option>
          </select>
          <p class="text-xs text-slate-500 mt-1">Choose the organization type for this user.</p>
        </div>

        <div>
          <label class="block text-sm mb-1 text-slate-700">Name</label>
          <input type="text" name="name"
            class="w-full border border-slate-300 rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-blue-500 outline-none"
            placeholder="Username" required />
        </div>

        <div>
          <label class="block text-sm mb-1 text-slate-700">Email</label>
          <input type="email" name="email"
            class="w-full border border-slate-300 rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-blue-500 outline-none"
            placeholder="***@example.com" required />
        </div>

        <div>
          <label class="block text-sm mb-1 text-slate-700">Password</label>
          <input type="password" name="password" minlength="8"
            class="w-full border border-slate-300 rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-blue-500 outline-none"
            placeholder="***" required />
        </div>

        <input type="hidden" name="status" value="active" />

        <div class="flex justify-end gap-3 pt-2">
          <button type="button" id="cancelAddUser"
            class="px-3 py-2 rounded-lg bg-slate-200 text-slate-700 text-sm hover:bg-slate-300">
            Cancel
          </button>
          <button type="submit"
            class="px-3 py-2 rounded-lg bg-blue-600 text-white text-sm hover:bg-blue-700">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>

<!-- Search -->
<div class="bg-white rounded-2xl shadow p-6 mb-6">
  <input
    id="searchUser"
    type="text"
    placeholder="Search users by name or email..."
    class="w-full border border-slate-200 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none text-sm"
  />
</div>

<!-- Users Table -->
<div class="bg-white rounded-2xl shadow p-6">
  <div class="overflow-x-auto">
    <table class="min-w-full text-sm text-left">
      <thead>
        <tr class="border-b text-slate-500">
          <th class="py-3 px-4">#</th>
          <th class="py-3 px-4">Name</th>
          <th class="py-3 px-4">Email</th>
          <th class="py-3 px-4">Role</th>
          <th class="py-3 px-4">Status</th>
          <th class="py-3 px-4">Actions</th>
        </tr>
      </thead>
      <tbody id="usersTable">
        <tr>
          <td colspan="6" class="py-4 text-center text-slate-400">Loading users...</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<!-- Change Password Modal -->
<div id="changePasswordModal" class="hidden fixed inset-0 bg-black/30 z-50 flex items-center justify-center">
  <div class="bg-white rounded-2xl shadow-xl w-full max-w-md p-6">
    <h3 class="text-lg font-semibold mb-2">Change User Password</h3>
    <p class="text-sm text-slate-600 mb-4">Set a new password for the selected user.</p>
    <form id="changePasswordForm" class="space-y-3">
      <input type="hidden" id="cpUserId" />
      <div>
        <label class="block text-sm mb-1">New Password</label>
        <input id="cpPassword" type="password" minlength="8" class="w-full border rounded px-3 py-2" required />
      </div>
      <div class="flex justify-end gap-2 pt-2">
        <button type="button" id="cpCancel" class="px-3 py-2 bg-slate-200 rounded">Cancel</button>
        <button type="submit" class="px-3 py-2 bg-blue-600 text-white rounded">Save</button>
      </div>
    </form>
  </div>
</div>

  <!-- Assign Access Modal (move from resources) -->
  <div id="assignAccessModal" class="hidden fixed inset-0 bg-black/40 z-50 flex items-center justify-center">
    <div class="bg-white rounded-2xl shadow-xl w-96 p-6">
      <h3 class="text-lg font-semibold mb-4">Manage Connect Users</h3>
      <div id="assignAccessInfo" class="text-sm text-slate-600 mb-3"></div>
      <p class="text-xs text-slate-500 mb-3">
        Enter one or more SSH usernames below. The provided <code class="font-mono">connect_user</code> identities will be available for this user on every resource.
      </p>
      <textarea id="assignConnectUsers" class="w-full border border-slate-300 rounded-lg px-3 py-2 text-sm h-28 resize-none mb-3" placeholder="root&#10;admin"></textarea>
      <p class="text-xs text-slate-500 mb-3">Separate usernames with commas or place each on a new line. Leave blank to remove existing connect users.</p>
      <div class="flex justify-end gap-2">
        <button id="assignAccessCancel" class="px-3 py-2 bg-gray-200 rounded-lg hover:bg-gray-300">Cancel</button>
        <button id="assignAccessSave" class="px-3 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700">Save</button>
      </div>
    </div>
  </div>

{{ end }}
{{ template "layout" . }}
