{{ define "resources_content" }}
<section class="min-h-screen">
  <div class="max-w-6xl mx-auto px-4">
    
    <!-- Header -->
    <div class="flex items-center justify-between mb-6">
      <div class="flex items-center gap-3">
        <h1 class="text-2xl font-semibold text-slate-800">Resources</h1>
    </div>
      <div class="flex gap-2">
        <button id="showAddResource"
          class="px-3 py-2 text-sm bg-green-600 hover:bg-green-700 text-white rounded-lg shadow transition">
          ‚ûï Add Resource
        </button>
        <!-- Generate Token merged into Add Resource modal -->
        <a href="/dashboard"
          class="px-3 py-1.5 text-sm bg-slate-100 hover:bg-slate-200 text-slate-700 rounded-lg transition shadow-sm">
          ‚Üê Back to Dashboard
        </a>
      </div>
    </div>

    <!-- Search -->
    <div class="mb-6 flex flex-wrap items-center justify-between gap-3">
      <input type="text" id="searchResource"
        class="w-full sm:w-1/2 rounded-lg border border-slate-300 px-3 py-2 text-sm focus:ring-2 focus:ring-blue-500 outline-none"
        placeholder="Search resources..." />
    </div>

    <!-- Resource Grid -->
    <div id="resourcesGrid"
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
      <!-- Cards dynamically rendered by app.js -->
      <div class="col-span-full text-center text-slate-400 text-sm">Loading resources...</div>
    </div>
  </div>

  <!-- Add Resource Modal -->
  <div id="addResourceModal"
    class="hidden fixed inset-0 bg-black/30 flex items-center justify-center z-50">
    <div class="bg-white rounded-2xl shadow-xl w-full max-w-md p-6">
        <h2 class="text-2xl font-bold text-gray-900 mb-2">Add New Resource</h2>
        <p class="text-gray-600 mb-4">
          Follow the steps below to install and register your agent.
        </p>

        <!-- Step 1: Download -->
        <div class="mb-6">
          <p class="text-sm text-gray-700 font-medium mb-2">1Ô∏è‚É£ Download the Teleport Agent:</p>
          <div class="flex flex-col sm:flex-row sm:items-center gap-3 bg-gray-100 border rounded-xl px-4 py-3">
            <div class="flex-1">
              <p class="text-sm text-gray-800 truncate">Agent build</p>
              <select id="agentArchSelect" class="mt-2 w-full sm:w-64 border border-slate-300 rounded px-3 py-2 text-sm bg-white">
                <option value="linux-amd64">Linux - amd64</option>
                <option value="linux-arm64">Linux - arm64</option>
              </select>
            </div>
            <div class="flex items-center">
              <button
                id="downloadAgent"
                class="ml-3 bg-green-600 hover:bg-green-700 text-white text-xs px-3 py-1.5 rounded transition"
              >
                Download
              </button>
            </div>
          </div>
          <p class="text-xs text-slate-500 mt-2">Choose the correct build for your machine. Use the sample run command below after extraction.</p>
        </div>
        <!-- Inline: Generate Token (merged) -->
        <div class="mb-4">
          <p class="text-sm text-gray-700 font-medium mb-2">üîë Generate registration token (optional)</p>
          <div class="flex items-center gap-2 mb-2">
            <button id="showAddGenTokenSection" class="px-3 py-1.5 bg-indigo-600 hover:bg-indigo-700 text-white rounded text-sm">Generate Token</button>
            <span class="text-sm text-slate-500">Create a one-time token to register an agent for a resource.</span>
          </div>
          <div id="addGenTokenSection" class="hidden border rounded-lg p-3 bg-slate-50">
            <div class="mb-2">
              <label class="block text-sm mb-1">TTL (minutes, 0 = no expiry)</label>
              <input id="addGenTokenTTL" type="number" min="0" value="60" class="w-full border border-slate-300 rounded-lg px-3 py-2 text-sm" />
            </div>
            <div id="addGenTokenResult" class="hidden bg-white border border-slate-200 rounded p-3 mb-2">
              <p class="text-sm text-slate-700 mb-2">Token (copy this now ‚Äî it will not be shown again):</p>
              <div class="flex items-center gap-2">
                <code id="addGenTokenValue" class="font-mono break-all text-sm p-2 bg-white rounded border w-full"></code>
                <button id="copyAddGenToken" class="px-3 py-1.5 bg-blue-600 text-white rounded">Copy</button>
              </div>
            </div>
            <div class="flex justify-end gap-2">
              <button id="createAddTokenBtn" class="px-3 py-1.5 bg-indigo-600 hover:bg-indigo-700 text-white rounded text-sm">Create Token</button>
            </div>
          </div>
        </div>

        <!-- Step 2: Extract -->
        <div class="mb-4">
          <p class="text-sm text-gray-700 font-medium mb-2">2Ô∏è‚É£ Extract the archive:</p>
          <div class="relative bg-gray-900 text-gray-100 rounded-xl px-4 py-3 flex items-center justify-between">
            <code id="cmdExtract" class="text-sm font-mono truncate">tar -xzf teleport-agent.tar.gz</code>
            <button
              id="copyExtract"
              class="ml-3 bg-blue-600 hover:bg-blue-700 text-white text-xs px-3 py-1.5 rounded transition"
            >
              Copy
            </button>
          </div>
        </div>

        <!-- Step 3: Run Agent -->
        <div class="mb-2">
          <p class="text-sm text-gray-700 font-medium mb-2">3Ô∏è‚É£ Run the agent after extracting:</p>
          <div class="relative bg-gray-900 text-gray-100 rounded-xl px-4 py-3 flex items-center justify-between">
            <code id="cmdRun" class="text-sm font-mono break-all"></code>
            <button
              id="copyRun"
              class="ml-3 bg-blue-600 hover:bg-blue-700 text-white text-xs px-3 py-1.5 rounded transition"
            >
              Copy
            </button>
          </div>
        </div>

        <p class="text-xs text-gray-500 mt-4 italic">
          üí° Ensure this machine can reach your controller before running the agent.
        </p>

        <div class="flex justify-end gap-3 pt-2">
          <button type="button" id="cancelAddResource"
            class="px-3 py-2 rounded-lg bg-slate-200 text-slate-700 text-sm hover:bg-slate-300">
            Close
          </button>
        </div>
    </div>
  </div>
  
</section>

<!-- SSH Terminal Modal -->
<div id="sshModal"
     class="hidden fixed inset-0 bg-black/40 z-50 flex items-center justify-center">
  <div class="bg-white rounded-2xl shadow-xl w-[95%] max-w-5xl p-4">
    <div class="flex items-center justify-between mb-3">
      <h2 class="text-lg font-semibold">SSH Session</h2>
      <button id="closeSSH"
              class="px-3 py-1.5 rounded bg-slate-200 hover:bg-slate-300">
        Close
      </button>
    </div>
    <div id="terminal"
         class="h-[70vh] w-full rounded-lg border border-slate-200 overflow-hidden bg-slate-900 text-white">
    </div>
  </div>
</div>
<div id="userModal"
           class="hidden fixed inset-0 bg-black/40 z-50 flex items-center justify-center">
        <div class="bg-white rounded-2xl shadow-xl w-96 p-6">
          <h3 class="text-lg font-semibold mb-4">Select SSH User</h3>
          <select id="userSelect"
                  class="border border-slate-300 rounded-lg w-full p-2 mb-4"></select>
          <div class="flex justify-end gap-2">
            <button id="cancelUserSelect"
                    class="px-3 py-2 bg-gray-200 rounded-lg hover:bg-gray-300">
              Cancel
            </button>
            <button id="confirmUserSelect"
                    class="px-3 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
              Connect
            </button>
          </div>
        </div>
</div>
 
 
 
<!-- (Token UI merged into Add Resource modal above) -->
{{ end }}

